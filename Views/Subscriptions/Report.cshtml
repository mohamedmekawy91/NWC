@model IEnumerable<NWC.DAL.Entity.Subscription>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Subscription Report</h2>

<hr />
<table class="table table-striped table-bordered">
    <thead class="table-primary">
        <tr>
            <th class="text-capitalize text-center">ID</th>
            <th class="text-capitalize text-center">Subscriber ID</th>
            <th class="text-capitalize text-center">Subscriber Name</th>
            <th class="text-capitalize text-center">Subscriber Mobile</th>
            <th class="text-capitalize text-center">RealEstateTypes Name</th>
            <th class="text-capitalize text-center">Unit No</th>
            <th class="text-capitalize text-center">Is There Sanitation</th>
            <th class="text-capitalize text-center">Last Reading Meter</th>
            <th class="text-capitalize text-center">Notes</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-center">@item.Id</td> 
            <td class="text-center">@item.Subscriber.Id</td> 
            <td class="text-center">@item.Subscriber.Name</td>
            <td class="text-center">@item.Subscriber.Mobile</td>
            <td class="text-center">@item.RealEstateTypes.Name</td>
            <td class="text-center">@item.Unit_No</td>
            <td class="text-center">@item.IsThereSanitation</td>
            <td class="text-center">@item.Last_Reading_Meter</td>
            <td class="text-center">@item.Notes</td>
        </tr>
}
    </tbody>
</table>
